@page
@model RazorPagesApp.Pages.CreateModel
@{
    ViewData["Title"] = "Add Item";
}

<h2 class="text-center mt-4">Add New Item</h2>

<form method="post" class="w-50 mx-auto p-4 border rounded shadow">
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input asp-for="NewItem.Name" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea asp-for="NewItem.Description" class="form-control" required></textarea>
    </div>
    <button type="submit" class="btn btn-success">Submit</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
